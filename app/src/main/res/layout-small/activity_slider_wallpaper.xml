<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SliderLiveActivity">

    <ImageView
        android:id="@+id/img_slider_wallpaper_last"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/img_arrow_left_wallpaper"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="5sp"
        android:src="@drawable/left_arrow" />

    <ImageView
        android:id="@+id/img_arrow_right_wallpaper"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="5sp"
        android:src="@drawable/right_arrow" />

    <ImageView
        android:id="@+id/img_close_live_wallpaper"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_gravity="start|top"
        android:layout_marginStart="40sp"
        android:layout_marginTop="40sp"
        android:src="@drawable/close_btn" />

    <ImageView
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_gravity="end|top"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="40sp"
        android:src="@drawable/heart_unselect_max" />

    <ImageView
        android:id="@+id/img_btn_save_wallpaper"
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="35sp"
        android:layout_marginBottom="5sp"
        android:src="@drawable/btn_save" />

    <ImageView
        android:id="@+id/img_share_wallpaper"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="30sp"
        android:layout_marginBottom="10sp"
        android:src="@drawable/share" />
</FrameLayout>