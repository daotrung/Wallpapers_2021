<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#21211f"

    tools:context=".fragment.WallpaperColorFragment">

    <TextView
        android:id="@+id/txt_title_color_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17sp"
        android:layout_marginTop="25sp"
        android:fontFamily="@font/poppins_medium"
        android:text="Color"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line4"
        app:layout_constraintEnd_toEndOf="@id/txt_title_color_main"
        app:layout_constraintStart_toStartOf="@id/txt_title_color_main"
        app:layout_constraintTop_toBottomOf="@id/txt_title_color_main" />

    <TextView
        android:id="@+id/txt_all_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18sp"
        android:fontFamily="@font/poppins_medium"
        android:text="See All"
        android:textColor="@color/icon_click"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_title_color_main" />


    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_color_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17sp"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line4"
        />


</androidx.constraintlayout.widget.ConstraintLayout>