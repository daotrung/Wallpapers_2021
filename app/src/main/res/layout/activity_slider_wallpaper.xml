<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SliderLiveActivity">

    <ImageView
        android:id="@+id/img_slider_wallpaper_last"
        android:src="@drawable/ic_launcher_background"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/img_arrow_left_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left_arrow"
        android:layout_marginStart="8sp"
        android:layout_gravity="start|center_vertical"/>
    <ImageView
        android:id="@+id/img_arrow_right_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="8sp"/>
    <ImageView
        android:id="@+id/img_close_live_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="51sp"
        android:src="@drawable/close_btn"
        android:layout_gravity="start|top"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51sp"
        android:layout_marginEnd="16sp"
        android:src="@drawable/heart_unselect_max"
        android:layout_gravity="end|top"/>

    <ImageView
        android:id="@+id/img_btn_save_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_save"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="45sp"
        android:layout_marginBottom="45sp"/>
    <ImageView
        android:id="@+id/img_share_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="56sp"
        android:layout_marginBottom="45sp"/>
</FrameLayout>