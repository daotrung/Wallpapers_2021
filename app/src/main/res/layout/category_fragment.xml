<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#21211f"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title_categories_main_wallpaper"
        android:layout_width="wrap_content"
        android:text="Categories"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="5sp"
        android:layout_marginStart="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_line_three"
        app:layout_constraintTop_toBottomOf="@id/txt_title_categories_main_wallpaper"
        app:layout_constraintStart_toStartOf="@id/txt_title_categories_main_wallpaper"
        android:layout_width="wrap_content"
        android:src="@drawable/line3"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_all_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="18sp"
        android:text="See All"
        android:textColor="#FFDA19"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_title_categories_main_wallpaper" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_categories_main"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/img_line_three"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title_categories_main_wallpaper" />

</androidx.constraintlayout.widget.ConstraintLayout>