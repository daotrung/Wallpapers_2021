<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#21211f"
    tools:context=".fragment.WallpaperTrendingFragment">

    <TextView
        android:id="@+id/txt_title_trend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17sp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/poppins_medium"
        android:text="Trending"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_line_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line2"
        app:layout_constraintEnd_toEndOf="@id/txt_title_trend"
        app:layout_constraintStart_toStartOf="@id/txt_title_trend"
        app:layout_constraintTop_toBottomOf="@id/txt_title_trend" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_trending"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_line_two" />


</androidx.constraintlayout.widget.ConstraintLayout>