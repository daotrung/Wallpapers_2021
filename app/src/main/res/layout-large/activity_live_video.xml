<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#21211f"
    android:fitsSystemWindows="true"
    tools:context=".LiveVideoActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <VideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_slider_live_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_arrow_left_video"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="8sp"
            android:src="@drawable/left_arrow" />

        <ImageView
            android:id="@+id/img_arrow_right_video"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8sp"
            android:src="@drawable/right_arrow" />

        <ImageView
            android:id="@+id/img_close_live_video"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="start|top"
            android:layout_marginStart="50sp"
            android:layout_marginTop="100sp"
            android:src="@drawable/close_btn" />

        <ImageView
            android:id="@+id/img_btn_save_video"
            android:layout_width="400sp"
            android:layout_height="250sp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="70sp"
            android:layout_marginBottom="20sp"
            android:src="@drawable/btn_save" />

        <ImageView
            android:id="@+id/img_share_video"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="56sp"
            android:layout_marginBottom="100sp"
            android:src="@drawable/share" />
    </FrameLayout>
</RelativeLayout>